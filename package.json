{
  "name": "elecshop",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "start:server": "turbo run dev --filter=@elecshop/server",
    "start:client": "turbo run start:dev --filter=@elecshop/client",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3"
  }
}