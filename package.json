{
  "name": "elecshop",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "start:server": "turbo run dev --filter=@elecshop/server",
    "start:client": "turbo run dev --filter=@elecshop/client",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3"
  }
}